<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_home_item_two_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fragment_home_ring_img_one" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_home_recyclerView_item_two_data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="今日提醒"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/fragment_home_recyclerView_item_two_data_name_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_home_recyclerView_item_two_data_name"
            android:gravity="center_vertical"
            android:text="："
            android:textSize="18dp" />

        <Switch
            android:id="@+id/fragment_home_recyclerView_item_two_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_home_recyclerView_item_two_data_name_connect" />

        <TextView
            android:id="@+id/fragment_home_recyclerView_item_two_data_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_home_recyclerView_item_two_switch"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="久坐提醒，康复训练提醒"
            android:textSize="17dp" />
    </RelativeLayout>
</LinearLayout>